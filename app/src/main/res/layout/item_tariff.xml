<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_s"
    android:backgroundTint="@color/alabaster"
    android:elevation="@dimen/elev_s"
    app:cardCornerRadius="@dimen/radius_s">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="@dimen/size_menu_item_iv_s"
            android:layout_height="@dimen/size_menu_item_iv_s"
            android:src="@drawable/ic_money" />

        <TextView
            android:id="@+id/tv_tariff"
            android:padding="@dimen/padding_s"
            android:layout_toEndOf="@id/iv_1"
            android:layout_toStartOf="@id/ib_meter_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/dummy_item_name" />
    </RelativeLayout>
</android.support.v7.widget.CardView>